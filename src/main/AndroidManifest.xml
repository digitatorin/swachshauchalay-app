                  android:theme="@style/SwachSauchalay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="RateToiletActivity"
                  android:label="Rate Toilet"
                  android:theme="@style/SwachSauchalay" />
        <activity android:name="SearchToiletActivity"
                  android:label="Search Toilets"
                  android:theme="@style/SwachSauchalay" />
